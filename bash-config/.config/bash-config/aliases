alias sbrc='source ~/.bashrc'
alias ..='cd ..'
alias py='python'
alias migrate='~/.config/migrate.sh'
alias dot='cd ~/dotfiles'
alias git-conf='~/.config/git-setup'
alias ffi='~/.config/scripts/install-fzf'
alias ffr='~/.config/scripts/remove-fzf'
alias envc='python -m venv venv'
alias enva='source venv/bin/activate; pip install ruff basedpyright'
alias envd='deactivate'
alias gg='git add .; git commit -m "updates"; git push origin main'
alias :q='exit'
alias open='xdg-open'
alias fucking='sudo'
alias cm='~/.config/scripts/change-monitor'

# Crea directory e ci entra
mkcd() {
    if [ $# -ne 1 ]; then
        echo "Usage: mkcd <directory>"
        return 1
    fi
    
    mkdir -p "$1" && cd "$1"
}

