#REMOVE BLOAT
sudo dnf group remove libreoffice -y
sudo dnf remove libreoffice* -y

sudo dnf update -y

#PROGRAMS
curl -sS https://starship.rs/install.sh | sh
sudo dnf copr enable lionheartp/Hyprland -y
sudo dnf install hyprland hyprpaper -y
sudo dnf install swaylock waybar alacritty alacritty helix btop -y
sudo dnf install foot dolphin -y
sudo dnf install google-chrome-stable -y
sudo dnf install stow lsd -y

sudo dnf install fd-find -y
sudo dnf install qalculate -y
sudo dnf copr enable errornointernet/walker -y
# sudo dnf install walker -y
# sudo dnf install elephant -y
sudo dnf install -y dbus-devel pkgconf-pkg-config -y
sudo dnf install gh -y
sudo dnf install blueman nmtui -y
sudo dnf install flameshot -y
sudo dnf install pipx
pipx install calcure
pipx ensurepath

sudo dnf install cascadia-mono-nf-fonts -y
#LANGAUGES
sudo dnf install gcc clangd golang rustup -y


#Install wifi gui
sudo curl -L https://github.com/s-adi-dev/nmgui/releases/download/v1.0.0/main.bin -o /usr/bin/nmgui
sudo chmod +x /usr/bin/nmgui
curl -sL https://raw.githubusercontent.com/s-adi-dev/nmgui/main/nmgui.desktop -o ~/.local/share/applications/nmgui.desktop

echo "Done"
